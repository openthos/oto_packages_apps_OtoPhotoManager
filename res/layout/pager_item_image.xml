<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_color_selector"
    android:orientation="vertical"
    android:padding="@dimen/grid_cell_margin">

    <de.k3b.android.androFotoFinder.imagedetail.PhotoViewEx
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_cell_margin"
        android:gravity="bottom|start"
        android:textSize="14sp"
        android:layout_gravity="bottom|start"
        android:background="@color/image_label_background" />
    <ImageButton
        android:id="@+id/cmd_any"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:visibility="invisible"
        android:src="@drawable/ic_action_tag"
        android:layout_gravity="bottom|end"
        android:background="@android:color/black"
         />

</FrameLayout>
