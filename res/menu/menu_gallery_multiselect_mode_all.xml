<!-- menue of gallery activity/fragment multiselection mode (with or without selected-only) -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" tools:context=".GalleryActivity">

    <item android:id="@+id/cmd_cancel_multiselect"
        android:title="@android:string/cancel"
        android:icon="@android:drawable/ic_menu_close_clear_cancel"
        android:visible="true"
        android:orderInCategory="2"
        android:showAsAction="always" />

    <item android:id="@+id/cmd_selected_only"
        android:title="@string/selected_only_menu_title"
        android:icon="@android:drawable/checkbox_off_background"
        android:visible="true"
        android:orderInCategory="2"
        android:checkable="true"
        android:checked="false"
        android:showAsAction="always" />

    <item
        android:id="@+id/menu_item_share"
        android:showAsAction="always"
        android:title="@string/share_menu_title"
        android:orderInCategory="3" />
    <item android:id="@+id/cmd_more"
        android:title="@string/more_menu_title"
        android:visible="true"
        android:orderInCategory="32700"
        android:showAsAction="never" />
</menu>
